<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/albumArt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/album_art_placeholder"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/albumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/albumNameText"
        app:layout_constraintTop_toBottomOf="@id/albumArt"
        app:layout_constraintStart_toStartOf="@id/albumArt"
        app:layout_constraintEnd_toEndOf="@id/albumArt"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="testetetetetetetetetetetetetetetetetetetetetetetetetete" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/artistNameText"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        app:layout_constraintStart_toStartOf="@id/albumArt"
        app:layout_constraintEnd_toEndOf="@id/albumArt"
        android:gravity="start"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Michael Jackson" />

</androidx.constraintlayout.widget.ConstraintLayout>